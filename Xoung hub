-- Sistema de notifica√ß√µes
local function createNotification(message, color, duration)
    local notification = Instance.new("Frame")
    notification.Name = "Notification"
    notification.Parent = screenGui
    notification.BackgroundColor3 = color or Color3.fromRGB(50, 50, 50)
    notification.BorderSizePixel = 0
    notification.Position = UDim2.new(1, 10, 0, 100)
    notification.Size = UDim2.new(0, 300, 0, 60)
    
    local notifCorner = Instance.new("UICorner")
    notifCorner.CornerRadius = UDim.new(0, 10)
    notifCorner.Parent = notification
    
    local notifText = Instance.new("TextLabel")
    notifText.Parent = notification
    notifText.BackgroundTransparency = 1
    notifText.Position = UDim2.new(0, 15, 0, 0)
    notifText.Size = UDim2.new(1, -30, 1, 0)
    notifText.Font = Enum.Font.Gotham
    notifText.Text = message
    notifText.TextColor3 = Color3.fromRGB(255, 255, 255)
    notifText.TextSize = 12
    notifText.TextWrapped = true
    notifText.TextXAlignment = Enum.TextXAlignment.Left
    
    -- Anima√ß√£o de entrada
    local enterTween = TweenService:Create(notification,
        TweenInfo.new(0.3, Enum.EasingStyle.Back),
        {Position = UDim2.new(1, -320, 0, 100)}
    )
    enterTween:Play()
    
    -- Remover ap√≥s dura√ß√£o
    game:GetService("Debris"):AddItem(notification, duration or 3)
    
    spawn(function()
        wait((duration or 3) - 0.5)
        if notification.Parent then
            local exitTween = TweenService:Create(notification,
                TweenInfo.new(0.3, Enum.EasingStyle.Quad),
                {Position = UDim2.new(1, 10, 0, 100)}
            )
            exitTween:Play()
        end
    end)
end

-- Funcionalidades avan√ßadas
local connections = {}

-- Auto Parry melhorado
local function setupAutoParry()
    if connections.autoParry then
        connections.autoParry:Disconnect()
    end
    
    if features.autoParry then
        connections.autoParry = RunService.Heartbeat:Connect(function()
            -- L√≥gica do auto parry aqui
            local ball = workspace:FindFirstChild("Ball")
            if ball and player.Character then
                local distance = (ball.Position - player.Character.HumanoidRootPart.Position).Magnitude
                if distance <= 15 then
                    -- Simular parry
                    createNotification("Auto Parry ativado!", Color3.fromRGB(100, 255, 100), 1)
                end
            end
        end)
        createNotification("Auto Parry ativado com sucesso!", Color3.fromRGB(100, 255, 100))
    else
        createNotification("Auto Parry desativado", Color3.fromRGB(255, 100, 100))
    end
end

-- Ball Magnet
local function setupBallMagnet()
    if connections.ballMagnet then
        connections.ballMagnet:Disconnect()
    end
    
    if features.ballMagnet then
        connections.ballMagnet = RunService.Heartbeat:Connect(function()
            local ball = workspace:FindFirstChild("Ball")
            if ball and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local direction = (player.Character.HumanoidRootPart.Position - ball.Position).Unit
                -- Simular atra√ß√£o da bola
            end
        end)
        createNotification("Ball Magnet ativado!", Color3.fromRGB(255, 150, 50))
    else
        createNotification("Ball Magnet desativado", Color3.fromRGB(255, 100, 100))
    end
end

-- Fly Mode
local flyConnection
local function setupFlyMode()
    if flyConnection then
        flyConnection:Disconnect()
        flyConnection = nil
    end
    
    if features.flyMode and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.MaxForce = Vector3.new(4000, 4000, 4000)
        bodyVelocity.Velocity = Vector3.new(0, 0, 0)
        bodyVelocity.Parent = player.Character.HumanoidRootPart
        
        flyConnection = UserInputService.InputBegan:Connect(function(input, gameProcessed)
            if not gameProcessed then
                if input.KeyCode == Enum.KeyCode.Space then
                    bodyVelocity.Velocity = Vector3.new(0, 50, 0)
                elseif input.KeyCode == Enum.KeyCode.LeftShift then
                    bodyVelocity.Velocity = Vector3.new(0, -50, 0)
                end
            end
        end)
        
        createNotification("Fly Mode ativado! Use SPACE/SHIFT", Color3.fromRGB(150, 150, 255))
    else
        if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local bodyVelocity = player.Character.HumanoidRootPart:FindFirstChild("BodyVelocity")
            if bodyVelocity then
                bodyVelocity:Destroy()
            end
        end
        createNotification("Fly Mode desativado", Color3.fromRGB(255, 100, 100))
    end
end

-- Conectar funcionalidades aos bot√µes
local originalCreateFeatureButton = createFeatureButton
createFeatureButton = function(parent, text, feature, layoutOrder, description)
    local container = originalCreateFeatureButton(parent, text, feature, layoutOrder, description)
    local button = container:FindFirstChild(text .. "Button")
    
    -- Adicionar funcionalidades espec√≠ficas
    local originalConnection = button.MouseButton1Click
    button.MouseButton1Click:Connect(function()
        wait(0.1) -- Aguardar atualiza√ß√£o da vari√°vel
        
        if feature == "autoParry" then
            setupAutoParry()
        elseif feature == "ballMagnet" then
            setupBallMagnet()
        elseif feature == "flyMode" then
            setupFlyMode()
        elseif feature == "wallHack" then
            if features.wallHack then
                -- Implementar wallhack
                createNotification("Wall Hack ativado!", Color3.fromRGB(255, 255, 100))
            else
                createNotification("Wall Hack desativado", Color3.fromRGB(255, 100, 100))
            end
        end
    end)
    
    return container
end

-- Atalhos de teclado
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed then
        if input.KeyCode == Enum.KeyCode.Insert then
            mainFrame.Visible = not mainFrame.Visible
            shadow.Visible = not shadow.Visible
        elseif input.KeyCode == Enum.KeyCode.Delete then
            screenGui:Destroy()
        end
    end
end)

