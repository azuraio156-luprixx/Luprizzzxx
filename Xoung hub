-- Fun√ß√£o para atualizar status
local function updateStatus(text, color)
    statusLabel.Text = "Status: " .. text
    statusLabel.TextColor3 = color or Color3.fromRGB(255, 255, 255)
end

-- Vari√°veis para funcionalidades
local autoParryEnabled = false
local speedBoostEnabled = false

-- Criar bot√µes com funcionalidades
createButton("üõ°Ô∏è Auto Parry", 1, function()
    autoParryEnabled = not autoParryEnabled
    if autoParryEnabled then
        updateStatus("Auto Parry Ativado", Color3.fromRGB(100, 255, 100))
    else
        updateStatus("Auto Parry Desativado", Color3.fromRGB(255, 100, 100))
    end
end)

createButton("‚ö° Speed Boost", 2, function()
    speedBoostEnabled = not speedBoostEnabled
    if speedBoostEnabled then
        updateStatus("Speed Boost Ativado", Color3.fromRGB(100, 255, 100))
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = 32
        end
    else
        updateStatus("Speed Boost Desativado", Color3.fromRGB(255, 100, 100))
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = 16
        end
    end
end)

createButton("üîÑ Reset Character", 3, function()
    if player.Character then
        player.Character:BreakJoints()
        updateStatus("Personagem Resetado", Color3.fromRGB(255, 255, 100))
    end
end)

createButton("üìä Player Info", 4, function()
    local info = string.format("Jogador: %s | Ping: %d ms", player.Name, player:GetNetworkPing() * 1000)
    updateStatus(info, Color3.fromRGB(100, 200, 255))
end)

-- Funcionalidade do bot√£o fechar
